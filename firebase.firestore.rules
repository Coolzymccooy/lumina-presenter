rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function authEmail() {
      return signedIn() && request.auth.token.email is string
        ? request.auth.token.email
        : '';
    }

    function sameTeam(teamId) {
      return signedIn() &&
        request.auth.token.teams is list &&
        teamId in request.auth.token.teams;
    }

    function controllerAllowed(data) {
      return signedIn() && (
        data.controllerOwnerUid == request.auth.uid ||
        (data.controllerAllowedUids is list && request.auth.uid in data.controllerAllowedUids) ||
        (
          authEmail() != '' &&
          data.controllerAllowedEmails is list &&
          (
            authEmail() in data.controllerAllowedEmails ||
            authEmail().lower() in data.controllerAllowedEmails
          )
        )
      );
    }

    // Live presenter/remote sync
    match /sessions/{sessionId} {
      // Allow bootstrap reads before owner is claimed, otherwise require ACL.
      allow read: if signedIn() && (
        resource.data.controllerOwnerUid == null ||
        controllerAllowed(resource.data)
      );

      // First writer becomes owner.
      allow create: if signedIn() &&
        request.resource.data.controllerOwnerUid == request.auth.uid;

      allow update: if signedIn() && (
        // Bootstrap owner claim if somehow owner is still null.
        (resource.data.controllerOwnerUid == null &&
          request.resource.data.controllerOwnerUid == request.auth.uid) ||

        // Owner can update any session fields.
        (resource.data.controllerOwnerUid == request.auth.uid) ||

        // Allowlisted admins can send control commands only (no ACL/owner mutation).
        (
          controllerAllowed(resource.data) &&
          request.resource.data.controllerOwnerUid == resource.data.controllerOwnerUid &&
          request.resource.data.diff(resource.data).changedKeys().hasOnly([
            'remoteCommand',
            'remoteCommandAt',
            'updatedAt',
          ])
        )
      );
      allow delete: if signedIn() && resource.data.controllerOwnerUid == request.auth.uid;
    }

    // Team playlists synced across home + sanctuary devices
    match /playlists/{playlistId} {
      allow read: if signedIn() && (
        resource.data.teamId == request.auth.uid ||
        (resource.data.teamId is string && sameTeam(resource.data.teamId))
      );

      allow create: if signedIn() && (
        request.resource.data.teamId == request.auth.uid ||
        (request.resource.data.teamId is string && sameTeam(request.resource.data.teamId))
      );

      allow update, delete: if signedIn() && (
        resource.data.teamId == request.auth.uid ||
        (resource.data.teamId is string && sameTeam(resource.data.teamId))
      );
    }

    // App telemetry and operator analytics
    match /user_activity_logs/{logId} {
      allow create: if signedIn() && (
        request.resource.data.userId == request.auth.uid ||
        request.resource.data.userId == 'anonymous'
      );
      allow read: if signedIn() && resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
  }
}
